{{ form_start(form) }}
<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="row">
            <div class="col-6 mt-3">{{ form_row(form.email) }}</div>
            <div class="col-6 mt-3">{{ form_row(form.password) }}</div>
            <div class="col-12 mt-3">{{ form_row(form.roles) }}</div>
        </div>
        <div class="row mt-5">
            <div class="col text-right">
                {{ form_widget(form) }}
                <a href="{{ path('app_admin_user_index') }}" class="btn btn-outline-secondary">Annuler</a>
                <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            </div>
        </div>
    </div>
</div>

{{ form_end(form) }}
