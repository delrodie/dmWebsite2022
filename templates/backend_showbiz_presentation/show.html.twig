{% extends 'backend_layout.html.twig' %}

{% block title %}{{ parent() }} Gestion des presentations{% endblock %}


{% block body %}
    {{ include('backend/entete.html.twig',{'rubrique': 'presentation'}) }}
    <div class="row mt-5">
        <div class="col text-right">
            {{ include('backend_showbiz_presentation/_delete_form.html.twig') }}
        </div>
        <div class="col text-right">

            <a href="{{ path('app_backend_showbiz_presentation_edit', {'id': showbiz_presentation.id}) }}" class="btn btn-primary">
                <i class="fa fa-edit"></i> Modifier
            </a>
            <a href="{{ path('app_backend_showbiz_presentation_index') }}" class="btn btn-outline-primary">
                <i class="fa fa-list"></i> Liste
            </a>
        </div>
    </div>
    <div class="component-section no-code">
        <p class="mg-b-25"></p>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible mg-b-25 fade show" role="alert">
                    {{message}}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}

        <p class="mg-b-20 text-justify">
            <img src="{{ absolute_url(asset('upload/showbiz/entreprise/'~ showbiz_presentation.media)) }}" alt="" class="img-thumbnail" width="40%" style="float: left; margin-right: 20px; margin-bottom: 5px;">
            {{ showbiz_presentation.contenu|raw }}
        </p>

    </div>

{% endblock %}

