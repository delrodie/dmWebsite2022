{% extends 'base_showbiz.html.twig' %}

{% block title %}Liste des albums distribués{% endblock %}

{% block body %}
	<main class="page-secondaire">
		<div class="container">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="{{ absolute_url(path('app_home')) }}"><i class="fa-solid fa-house"></i></a></li>
					<li class="breadcrumb-item"><a href="{{ absolute_url(path('app_showbiz_home') )}}">Showbiz</a></li>
					<li class="breadcrumb-item"><a href="{{ absolute_url(path('app_showbiz_label') )}}">Label</a></li>
					<li class="breadcrumb-item active" aria-current="page">Album</li>
				</ol>
			</nav>
			<div class="row my-5">
				<div class="col-12">
					<div class="btn-group">
						<a href="{{ absolute_url(path('app_showbiz_label') )}}" class="btn btn-outline-primary active">Liste des artistes</a>
						<a href="{{ absolute_url(path('app_showbiz_album') )}}" class="btn btn-outline-primary">Liste des albums</a>
					</div>
				</div>
			</div>
			<div class="row my-5">
				<div class="col-12 text-center">
					<form action="{{ absolute_url(path('app_showbiz_album')) }}" onclick="submit()">
						<div class="btn-group-sm" role="group" aria-label="Basic radio toggle button group"data-aos="fade-down" data-aos-duration="3000" data-aos-offset="300" data-aos-easing="ease-in-sine">
							<label for="">Filtrer la liste </label>
							<input type="radio" class="btn-check" name="" id="btnA" autocomplete="off" value="">
							<label class="btn btn-outline-primary" for="btnA">Tout</label>

							<input type="radio" class="btn-check" name="btnfiltre" id="btnA" autocomplete="off" value="A">
							<label class="btn btn-outline-primary" for="btnA">A</label>

							<input type="radio" class="btn-check" name="btnfiltre" id="btnB" autocomplete="off" value="B">
