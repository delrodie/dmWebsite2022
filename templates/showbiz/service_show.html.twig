{% extends 'base_showbiz.html.twig' %}

{% block title %}{{ service.titre }}{% endblock %}

{% block body %}
	<main class="page-secondaire">
		<div class="container">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="{{ absolute_url(path('app_home')) }}"><i class="fa-solid fa-house"></i></a></li>
					<li class="breadcrumb-item"><a href="{{ absolute_url(path('app_showbiz_home') )}}">Showbiz</a></li>
					<li class="breadcrumb-item"><a href="{{ absolute_url(path('app_showbiz_service_index')) }}">Services</a></li>
					<li class="breadcrumb-item active" aria-current="page">{{ service.titre}}</li>
				</ol>
			</nav>
			<div class="row">
				<div class="col-lg-8 content-principal" data-aos="fade-up" data-aos-duration="2000" data-aos-offset="300" data-aos-easing="ease-in-sine">
					<h3>{{ service.titre }}</h3>
					{% if service.media %}
						<img src="{{ absolute_url(asset('upload/showbiz/services/'~ service.media)) }}" alt="{{ service.titre }}" class="img-thumbnail" style="width: 50%; float: left; margin-right: 20px">

					{% endif %}
					{{ service.contenu|raw() }}
				</div>
				{{ render(url('app_showbiz_rubrique_droite')) }}
			</div>

			{{ render(url('app_showbiz_partenaires')) }}
		</div>

	</main>
{% endblock %}
{% block sliders %}
	<div class="bg-page2">
		<img src="https://picsum.photos/2000/150" alt="" class="img-fluid">
	</div>
{% endblock %}

{% block meta %}
	<meta name="keywords" content="{{ service.tags }}"  />
	<meta name="description" content="{{ service.resume }}" />
	<meta name="revisit" content="7 days" />
	<meta name="revisit-after" content="7 days">
	<meta name="Author" content="Dream Maker, Delrodie AMOIKON">
	<meta name="Copyright" content="www.dreammaker-ci.com">
	<meta name="Content-Language" content="FR">
	<meta name="distribution" content="global" />
	<meta name="Audience" content="All" />
	<meta name="Robots" content="full">

	<link rel="canonical" href="{{ absolute_url(path('app_showbiz_service_show',{'slug': service.slug})) }}" />
	<meta property="og:locale" content="fr_FR" />
	<meta property="og:type" content="website" />
	<meta property="og:title" content="{{ service.titre }}" />
	<meta property="og:description" content="{{ service.resume }}" />
	<meta property="og:url" content="{{ absolute_url(path('app_showbiz_service_show',{'slug': service.slug})) }}" />
	<meta property="og:site_name" content="Dream Maker" />
	<meta property="article:section" content="Item" />
	<meta property="article:published_time" content="{{ service.createdAt|date('Y-m-d H:i:s') }}" />
	<meta property="og:image" content="{{ absolute_url(asset('upload/showbiz/servies/'~ service.media)) }}" />
	<meta name="twitter:card" content="summary"/>
	<meta name="twitter:description" content="{{ service.resume }}"/>
	<meta name="twitter:title" content="{{ service.titre }}"/>
	<meta name="twitter:domain" content="{{ absolute_url(path('app_showbiz_service_show',{'slug': service.slug})) }}"/>
	<meta name="twitter:image:src" content="{{ absolute_url(asset('upload/showbiz/services/'~ service.media)) }}"/>
{% endblock %}
